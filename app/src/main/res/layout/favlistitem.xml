<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
  <androidx.cardview.widget.CardView
      android:layout_width="114dp"
      app:cardCornerRadius="50dp"
      android:id="@+id/imgecard"
      android:layout_height="133dp">
      <ImageView
          android:layout_width="114dp"
          android:layout_height="133dp"
          android:src="@drawable/cakimg"
         />
  </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:background="@drawable/listitemborder"
        android:layout_toRightOf="@+id/imgecard"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/storename"
            android:textColor="@color/black"
            android:text="7th Heaven"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/storeaddress"
            android:text="Chinese, North Indian, Fast Food \nAnishbad"
            android:maxLines="3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs.100"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/price"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 5Km"
            android:drawableLeft="@drawable/blackdot"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:id="@+id/distance"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>

</RelativeLayout>